{
    "name": "Yahboom RGB Cool Hat OLED Display (Python)",
    "version": "2022.03.31.027",
    "slug": "yahboom_rgb_fan_display_python",
    "description": "This addon lets you display to your OLED and RGB Fan HAT from Yahboom.",
    "arch": [
        "armhf",
        "armv7",
        "aarch64"
    ],
    "log_level": "info",
    "startup": "services",
    "hassio_api": true,
    "auth_api": true,
    "ingress": false,
    "app_armor": true,
    "host_network": true,
    "privileged": [
        "SYS_ADMIN"
    ],
    "devices": [
        "/dev/i2c-1"
    ],
    "gpio": true,
    "stage": "experimental",
    "full_access": true,
    "url": "https://github.com/rojoricardo/HomeAssistant/tree/main/Yahboom_RGB_Coolin_Hat_Python",
    "boot": "manual",
    "options": {
        "Show_Splash_Screen": true,
        "Show_Network_Info": false,
        "Show_Storage_Info": true,
        "Show_Memory_Info": true,
        "Show_CPU_Info": true,
        "Temperature_Unit": "C",
        "Slide_Duration": 5,
        "Stop_Auto_Run": false,
        "Enable_Fan": true,
        "Temperature_Full": 60,
        "Temperature_High": 54,
        "Temperature_Medium_High": 50,
        "Temperature_Medium_Low": 45,
        "Temperature_Low": 40
    },
    "schema": {
        "Show_Splash_Screen": "bool",
        "Show_Network_Info": "bool",
        "Show_Storage_Info": "bool",
        "Show_Memory_Info": "bool",
        "Show_CPU_Info": "bool",
        "Temperature_Unit": "list(C|F)?",
        "Slide_Duration": "int",
        "Stop_Auto_Run": "bool",
        "Enable_Fan": "bool",
        "Temperature_Full": "list(61|62|63|64|65|66)",
        "Temperature_High": "int(55,60)",
        "Temperature_Medium_High": "int(50,54)",
        "Temperature_Medium_Low": "int(45,49)",
        "Temperature_Low": "int(40,44)"
    }
}
